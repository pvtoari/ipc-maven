<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.pvtoari.ipcmaven.pract7.internationalizationIPC.controller.MainViewController">
    <center>
        <Pane BorderPane.alignment="CENTER" />
    </center>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu text="%menuButton.File">
                            <items>
                                <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="%fileMenuItem.Exit">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="%menuButton.Launch">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Amazon" />
                                <MenuItem mnemonicParsing="false" text="Blogger" />
                                <MenuItem mnemonicParsing="false" text="Ebay" />
                                <MenuItem mnemonicParsing="false" text="Facebook" />
                                <MenuItem mnemonicParsing="false" text="Google+" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="%menuButton.Options">
                            <items>
                                <Menu mnemonicParsing="false" text="%optionsMenuItem.BuyIn">
                                    <items>
                                        <RadioMenuItem fx:id="amazonRadioMenuItem" mnemonicParsing="false" text="Amazon">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="axisToggleGroup" />
                                            </toggleGroup>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="ebayRadioMenuItem" mnemonicParsing="false" text="Ebay" toggleGroup="$axisToggleGroup" />
                                    </items>
                                </Menu>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                        <Button fx:id="amazonButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/amazon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="bloggerButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/bing.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="ebayButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/ebay.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="facebookButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/facebook.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="googlePlusButton" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/googlePlus.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <bottom>
        <Label fx:id="visitingLabel" text="Visiting:" BorderPane.alignment="BOTTOM_LEFT" />
    </bottom>
</BorderPane>
